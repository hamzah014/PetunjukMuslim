<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/islamic"
    tools:context=".fragment.AboutUsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="About Us"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/txt_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:editable="false"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text="At Petunjuk Muslim, we build a mobile app that offers comprehensive religious, lifestyle and community features to the Ummah,to continuously inspire them to be better individuals."/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_describe"
            android:padding="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/unikl"/>

    </RelativeLayout>


</FrameLayout>